<script>
$(document).ready(function() {
  console.log("Getting Bing daily image");
  $.get("http://www.bing.com/HPImageArchive.aspx", {format: "js", idx: Math.floor(Math.random() * 7), n: 1}, function(data) {
    res = data;
    $('body').css("background-image", 'url(' + "https://www.bing.com" + res.images[0].url + ')');
    $('body').css("background-repeat", "no-repeat");
    $('body').css("background-size", "cover")
  });
  console.log("Done getting Bing daily image");
});
</script>

<div class="home">
  <div class="info">
    <div class="wrap">
      <a href="/" class="logo"><%= config.title %></a>
      <div class="subtitle"><%= config.subtitle || '' %></div>
      <hr/>
      <div class="sns">
        <% for (let item in theme.sns) { %>
            <a href="<%- url_for(theme.sns[item]) %>" target="_blank"><%= item %></a>
        <% } %>
      </div>
      <hr/>
      <%- partial('_partial/footer') %>
    </div>
  </div>
</div>
